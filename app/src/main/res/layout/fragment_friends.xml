<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.martinjonovski.chatnoir.FriendsFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/friends_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/empty_view_friends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_data_available"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/info_img_friends"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:src="@android:drawable/ic_menu_info_details"
        android:visibility="invisible" />
    <ImageView
        android:id="@+id/no_recevnt_fri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_bkg"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/norecentitems" />


</RelativeLayout>
